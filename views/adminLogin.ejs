<%- include('partials/header') %>

<section class="vh-100 gradient-custom" style="background-image: url(img/Background.jpg)">

    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-light text-black" style="border-radius: 1rem;">
          <div class="card-body p-5 shadow-5 text-center">
            <h2>Admin Login</h2>

        <ul>
          <% if (messages.success_msg){ %>
            <li><%= messages.success_msg  %> </li>
          <% } %> 
        </ul>
      
        <ul>
          <% if (messages.error){ %>
            <li><%= messages.error  %> </li>
          <% } %> 
        </ul>
            <form action="/adminlogin" method="POST">
              <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="E-Mail">
              </div>
              <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password">
              </div>
                <input class="form-check-input" type="checkbox" value="true" name="is_admin" id="flexCheckChecked" checked hidden>
              <button type="submit" class="btn btn-dark">Login</button>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
