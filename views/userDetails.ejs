<%- include('partials/header') %>

<nav class="navbar navbar-expand-lg bg-light mb-5">
    <div class="container">
      <a class="navbar-brand" href="/adminhome"><i class="fas fa-book fa-1x"></i>Blogging Site</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse navitem" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link " aria-current="page" href="/home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link">Admin</a>
          </li>
        </ul>
        <div class="ms-auto">
            <form class="form-inline my-2 my-lg-0" action="/adminhome " method="POST">
              <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="search">
              <button class="btn btn-sm btn-outline-secondary" type="submit">Search</button>
            </form>
        </div>
      </div>
    </div>
  </nav>

  <div class="container">
    <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">E-mail</th>
            <th scope="col">Handle</th>
          </tr>
        </thead>
        <tbody>
          <% if (posts.length > 0) { %>
            <% for (let post of posts) { %>
          <tr>
            <th scope="row" ><%= post.id  %></th>
            <td><%= post.name  %></td>
            <td><%= post.email  %></td>
            <td><a href="/deluser/<%=post.id%>" >DEL</a></td>
          </tr>
          <% } %>
          <% } else { %>
            <h1>No Blogs Found!</h1>
          <% } %>
        </tbody>
      </table>
  </div>


</table>
 
  <%- include('partials/footer') %>