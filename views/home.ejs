<%- include('partials/header') %>
<%- include('partials/userNavbar') %>

  <section style="background-color: #eee;">
  <% if (posts.length > 0) { %>
    <% for (let post of posts) { %>
      <div class="container py-2 h-100">
      <div class="row d-flex justify-content-center">
        <div class="col-md-12 col-lg-10 col-xl-8">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-start align-items-center">
                <div>
                  <h6 class="fw text-primary mb-1"><%= post.title %></h6>
                  <p class="text-muted small mb-0" style="font-size: 10px;"><%= post.created_date %></p>
                </div>
              </div>
              <p class="mt-3 mb-4 pb-2">
                <%= post.post %>
              </p>
  
              <div class="small d-flex justify-content-start">
                <a href="/like/<%= post.id %>" class="d-flex align-items-center me-3">
                  <i class="far fa-thumbs-up me-2"></i>
                  <p class="mb-0"  id="<%= post.is_liked %>"><%= post.likecount %> Like</p>
                </a>
                <a href="/comment/<%=post.id%>" class="d-flex align-items-center me-3">
                  <i class="far fa-comment-dots me-2"></i>
                  <p class="mb-0"><%= post.commentcount %> Comment</p>
                </a>
                <a href="#!" class="d-flex align-items-center me-3">
                  <i class="fas fa-share me-2"></i>
                  <p class="mb-0">Share</p>
                </a>
              </div>
            </div>
            <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
              <div class="d-flex flex-start w-100">
                <div class="form-outline w-100">
                  <ul>
                    <% if (messages.error){ %>
                      <li><%= messages.error  %> </li>
                    <% } %> 
                  </ul>
                  <form action="/comment" method="post">
                    <div class="form-group d-flex flex-row">
                      <input type="text" class="form-control" id="commentbox" placeholder="Comment" name="blogId" hidden value="<%= post.id %>">
                      <input type="text" class="form-control" id="commentbox" placeholder="Comment" name="blogTitle" hidden value="<%= post.title %>">
                      <input type="text" class="form-control " id="commentbox" placeholder="Write comment here..." name="comments">
                      <button class="btn btn-primary btn-sm ml-2" type="submit">comment</button>
                    </div>
                  </form>                 
                </div>
              </div>
                <!-- <% for (let com of comments) { %>
                  <label class="form-label" for="textAreaExample"><a><b><%= com.name  %></b> - </a><%= com.comment %>  <i class='fa fa-trash' style ="color: gray; font-size:12px;"></i></label><br>            
                <% } %> -->
                <div class="float-end mt-2 pt-1"></div> 
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  <% } else { %>
    <div class="jumbotron centered">
      <h1>No Blogs Found!</h1>
    </div>
  <% } %>
  </section>

  <%- include('partials/footer') %>